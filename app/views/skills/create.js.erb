// バリデーション成功時のモーダル表示
<% if @learning_data.errors.empty? %>
  const modal = new bootstrap.Modal(document.getElementById('Modal'));
  document.getElementById('modal-skill').textContent = "<%= j @learning_data.skill %>";
  document.getElementById('modal-time').textContent = "<%= j @learning_data.time %>";
  modal.show();
<% end %>

// バリデーション失敗時のエラーメッセージ表示
<% if @learning_data.errors.any? %>
  // skillのエラーメッセージを表示
  const skillErrors = "<%= j @learning_data.errors[:skill].join(', ') %>";
  document.getElementById('skill-error').innerHTML = skillErrors;

  // timeのエラーメッセージを表示
  const timeErrors = "<%= j @learning_data.errors[:time].join(', ') %>";
  document.getElementById('time-error').innerHTML = timeErrors;
<% else %>
  // エラーメッセージがない場合、エラーメッセージ要素をクリア
  document.getElementById('skill-error').innerHTML = '';
  document.getElementById('time-error').innerHTML = '';
<% end %>
