<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
  </head>
  <body>
    <header>
      <h1>My Portfolio</h1>
      <%= link_to "ログアウト", logout_path, class: "button_logout", data: { "turbo-method": :delete } %>
    </header>
    <div class="toppage-container">
      <div class="profile-group">
        <div class="profile">
          <div class="avatar">
            <div class="image">
              <% if @user&.image&.attached? %>
                <%= image_tag @user.image, class: 'avatar-image' %>
              <% else %>
                <%= image_tag 'default_image.jpg', class: 'avatar-default' %>
              <% end %>
            </div>
            <div class="avatar-name">
              <%= current_user.name %>
            </div>
          </div>
          <div class="content">
            <h4>自己紹介</h4>
            <div class="text">
              <%= current_user.introduction %>
            </div>
            <div class="input-group">
              <%= link_to "自己紹介を編集する", edit_user_path(@user), class: "button_myedit" %>
            </div>
          </div>
        </div>
      </div>
      <div class="chart-group">
        <div class="chart-frame">
          <div class="input-group3">
            <h5>学習チャート</h5>
            <%= link_to "編集する", edit_user_learning_datum_path(@user), class: "button-edit" %>
          </div>
        </div>
        <div class="chart">
          <div><canvas id="myChart" width="1000" height="700"></canvas></div>

          <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

          <script>
            // コントローラからデータを取得
            const learningData = <%= @learning_data.to_json.html_safe %>;

            // 月のラベルを設定
            const labels = ['先々月', '先月', '今月'];

            // チャート表示の設定
            const ctx = document.getElementById('myChart');

            // Chart.js の設定
            new Chart(ctx, {
              type: 'bar',
              data: {
                labels: labels, // X軸のラベル（先々月、先月、今月）
                datasets: [
                  {
                    label: 'バックエンド',
                    data: learningData.backend,
                    backgroundColor: 'rgba(255, 99, 132, 0.5)'
                  },
                  {
                    label: 'フロントエンド',
                    data: learningData.frontend,
                    backgroundColor: 'rgba(255, 159, 64, 0.5)'
                  },
                  {
                    label: 'インフラ',
                    data: learningData.infra,
                    backgroundColor: 'rgba(255, 205, 86, 0.5)'
                  }
                ]
              },
              options: {
                responsive: true,
                plugins: {
                  legend: {
                    position: 'top', // 凡例の位置
                  },
                  title: {
                    display: true,
                    text: 'Chart.js Bar Chart'
                  }
                },
                scales: {
                  y: {
                    beginAtZero: true, // Y軸を0から開始
                    ticks: {
                      stepSize: 10 // 目盛り間隔
                    }
                  }
                }
              }
            });
          </script>
        </div>
      </div>
    </div>
    <footer>
      <p>portfolio site</p>
    </footer>
  </body>
</html>